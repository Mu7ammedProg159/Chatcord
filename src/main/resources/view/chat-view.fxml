<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mdev.messanger.controller.ChatController">

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="10" style="-fx-background-color: #2f3136;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Chats" />
            <ListView fx:id="contactsListView" style="-fx-background-color: #202225; -fx-text-fill: white;" VBox.vgrow="ALWAYS" />
            <Button fx:id="logoutButton" onAction="#onLogoutClick" style="-fx-background-color: #ff5555; -fx-text-fill: white;" text="Logout" />
        </VBox>
    </left>

    <!-- Main Chat Area -->
    <center>
        <VBox spacing="10" style="-fx-background-color: #36393f;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="chatTitle" style="-fx-text-fill: white; -fx-font-size: 16px;" text="Chat with ..." />
            </HBox>

            <!-- Chat Messages -->
            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="messagesContainer" spacing="5">
                        <padding>
                            <Insets bottom="5" left="5" right="5" top="5" />
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>

            <!-- Message Input -->
            <HBox spacing="10">
                <TextField fx:id="messageField" promptText="Type a message..." style="-fx-background-radius: 10; -fx-padding: 10;" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" defaultButton="true" style="-fx-background-color: #7289da; -fx-text-fill: white;" text="Send">
               <HBox.margin>
                  <Insets right="5.0" top="5.0" />
               </HBox.margin></Button>
            </HBox>
        </VBox>
    </center>

</BorderPane>
