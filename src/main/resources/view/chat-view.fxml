<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mdev.messanger.controller.ChatController" prefWidth="800" prefHeight="600">

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2f3136;" prefWidth="220">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Chats" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <ListView fx:id="contactsListView" VBox.vgrow="ALWAYS" style="-fx-background-color: #202225; -fx-text-fill: white;" />
            <Button text="Logout" fx:id="logoutButton" style="-fx-background-color: #ff5555; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Main Chat Area -->
    <center>
        <VBox spacing="10" style="-fx-background-color: #36393f;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Header -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="chatTitle" text="Chat with ..." style="-fx-text-fill: white; -fx-font-size: 16px;" />
            </HBox>

            <!-- Chat Messages -->
            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="messagesContainer" spacing="5">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>

            <!-- Message Input -->
            <HBox spacing="10">
                <TextField fx:id="messageField" promptText="Type a message..." HBox.hgrow="ALWAYS"
                           style="-fx-background-radius: 10; -fx-padding: 10;" />
                <Button text="Send" fx:id="sendButton" style="-fx-background-color: #7289da; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>

</BorderPane>