<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.mdev.messanger.controller.AuthController">
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4; -fx-padding: 40;">
        <Label fx:id="titleLabel" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Welcome" />
      <TextField fx:id="emailField" maxWidth="250.0" promptText="Email Address" />

        <!-- Username -->
        <TextField fx:id="usernameField" maxWidth="250" promptText="Username" />

        <!-- Password -->
        <PasswordField fx:id="passwordField" maxWidth="250" promptText="Password" />

        <!-- Confirm Password (only for Sign Up) -->
        <PasswordField fx:id="confirmPasswordField" managed="false" maxWidth="250" promptText="Confirm Password" visible="false" />

        <!-- Submit Button -->
        <Button fx:id="submitButton" maxWidth="250" onAction="#onSubmitClicked" text="Sign In" />

        <!-- Switch Mode -->
        <HBox alignment="CENTER">
            <Label fx:id="switchLabel" text="Don't have an account?" />
            <Hyperlink fx:id="switchModeLink" onAction="#onSwitchModeClicked" text="Sign Up" />
        </HBox>

        <!-- Status -->
        <Label fx:id="statusLabel" text="" textFill="red" />
    </VBox>
</StackPane>
